{
  "name": "eaas-api",
  "version": "0.0.1",
  "description": "Embalmer As A Service",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec ts-node --experimental-specifier-resolution=node ./src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "sc -p tsconfig.json && NODE_ENV=production NODE_PATH=./build ts-node --experimental-specifier-resolution=node ./src/index.ts",
    "migrate:list": "NODE_OPTIONS=\"--loader ts-node/esm\" knex migrate:list help --migrations-directory ./src/database/migrations",
    "migrate:make": "NODE_OPTIONS=\"--loader ts-node/esm\" knex migrate:make --migrations-directory ./src/database/migrations -x ts",
    "migrate:latest": "NODE_OPTIONS=\"--loader ts-node/esm\" knex migrate:latest  --migrations-directory ./src/database/migrations --env development",
    "migrate:latest:production": "NODE_OPTIONS=\"--loader ts-node/esm\" NODE_ENV=production knex migrate:latest --env production",
    "migrate:test": "NODE_OPTIONS=\"--loader ts-node/esm\" NODE_ENV=test knex migrate:latest --env test",
    "migrate:test:ci": "NODE_OPTIONS=\"--loader ts-node/esm\" NODE_ENV=test knex migrate:latest --env test --connection postgres://postgres:postgres@localhost:5432/eaas_db",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarcophagus-org/sarcophagus-eaas.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sarcophagus-org/sarcophagus-eaas/issues"
  },
  "homepage": "https://github.com/sarcophagus-org/sarcophagus-eaas#readme",
  "dependencies": {
    "@sarcophagus-org/sarcophagus-v2-sdk": "file:../../../sarcophagus-v2-sdk",
    "bcrypt": "^5.1.1",
    "chalk": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ecies-geth": "^1.6.14",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "firebase": "^9.16.0",
    "fs": "^0.0.1-security",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "passport": "^0.6.0",
    "pg": "^8.11.3",
    "pg-escape": "^0.2.0",
    "shamirs-secret-sharing-ts": "^1.0.2"
  },
  "devDependencies": {
    "@multiformats/multiaddr": "^12.1.7",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
