{
  "name": "eaas",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npx turbo run build",
    "dev": "npx turbo run dev --parallel",
    "dev:app": "npx turbo run dev --scope eaas-interface",
    "dev:api": "npx turbo run dev --scope eaas-api",
    "test:api": "npx turbo run test --scope eaas-api",
    "lint": "npx turbo run lint",
    "prettier": "npx prettier@latest --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "latest"
  },
  "engines": {
    "node": "v18.17.0"
  }
}
